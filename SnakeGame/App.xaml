<Application x:Class="SnakeGame.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:local="clr-namespace:SnakeGame" 
             xmlns:sys="clr-namespace:System;assembly=netstandard"
             StartupUri="Views/MainWindow.xaml">
    <Application.Resources>
        <SolidColorBrush x:Key="MainBackgroundColor" Color="#f1f3f9"/>
       
        <SolidColorBrush x:Key="ButtonColor" Color="#3ca1e2"/>
        <SolidColorBrush x:Key="TextBoxColor" Color="#ececec"/>
        <!--button width and -->
        <sys:Double x:Key="ButtonWidth">40</sys:Double>
        <sys:Double x:Key="ButtonHeight">40</sys:Double>
        <sys:Double x:Key="ImageWidth">80</sys:Double>
        <sys:Double x:Key="ImageHeight">120</sys:Double>

        <!--Canvas-->
        <SolidColorBrush x:Key="CanvasBackGroundColor" Color="Black" />
        <sys:Double x:Key="CanvasWidth">800</sys:Double>
        <sys:Double x:Key="CanvasHeight">450</sys:Double>
    </Application.Resources>
</Application>
